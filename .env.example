# ===========================================
# AfriVerse - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ===========================================
# üî¥ REQUIRED - App won't work without these
# ===========================================

# Environment Mode
NODE_ENV="development"  # Change to "production" for live site

# Database (MongoDB Atlas - https://mongodb.com/atlas)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/afriverse?retryWrites=true&w=majority"

# NextAuth.js Authentication (https://next-auth.js.org)
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters"
NEXTAUTH_URL="http://localhost:3000"  # Change to https://afriverse.africa in production

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://afriverse.africa"
NEXT_PUBLIC_SITE_NAME="AfriVerse"
ADMIN_EMAIL="john.paulson@afriverse.africa"

# ===========================================
# üü° RECOMMENDED - Important for full functionality
# ===========================================

# Email Provider - Resend (https://resend.com)
RESEND_API_KEY="re_your_api_key_here"
RESEND_FROM_EMAIL="AfriVerse <hello@afriverse.africa>"
RESEND_AUDIENCE_ID="your_audience_id_here"

# Email Provider - SendGrid Alternative (https://sendgrid.com)
# SENDGRID_API_KEY="SG.your_api_key_here"
# SENDGRID_FROM_EMAIL="hello@afriverse.africa"
# SENDGRID_FROM_NAME="AfriVerse"

# Cloudinary - Image & Media Hosting (https://cloudinary.com)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Sentry - Error Monitoring (https://sentry.io)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# ===========================================
# üü¢ OPTIONAL - Enhanced features
# ===========================================

# Google Analytics (https://analytics.google.com)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Google OAuth - Social Login (https://console.cloud.google.com)
# GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
# GOOGLE_CLIENT_SECRET="your-client-secret"

# Google reCAPTCHA v3 - Spam Protection (https://www.google.com/recaptcha/admin)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-site-key"
# RECAPTCHA_SECRET_KEY="your-secret-key"

# ===========================================
# üí∞ MONETIZATION - Revenue features
# ===========================================

# Google AdSense (https://www.google.com/adsense)
# Publisher ID format: ca-pub-XXXXXXXXXXXXXXXX
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID="ca-pub-XXXXXXXXXXXXXXXX"

# AdSense Slot IDs - Create ad units in AdSense dashboard
NEXT_PUBLIC_ADSENSE_SLOT_BILLBOARD="1234567890"
NEXT_PUBLIC_ADSENSE_SLOT_LEADERBOARD="1234567891"
NEXT_PUBLIC_ADSENSE_SLOT_MEDIUM_RECT="1234567892"
NEXT_PUBLIC_ADSENSE_SLOT_HALF_PAGE="1234567893"
NEXT_PUBLIC_ADSENSE_SLOT_IN_ARTICLE="1234567894"
NEXT_PUBLIC_ADSENSE_SLOT_MOBILE="1234567895"
NEXT_PUBLIC_ADSENSE_SLOT_FOOTER="1234567896"
NEXT_PUBLIC_ADSENSE_SLOT_NATIVE="1234567897"

# Payment Gateways (for future subscriptions/tipping)
# Flutterwave (https://flutterwave.com)
# FLUTTERWAVE_PUBLIC_KEY="FLWPUBK_TEST-xxxxxxxxxxxxx"
# FLUTTERWAVE_SECRET_KEY="FLWSECK_TEST-xxxxxxxxxxxxx"
# FLUTTERWAVE_ENCRYPTION_KEY="your-encryption-key"
# FLUTTERWAVE_WEBHOOK_SECRET="your-webhook-secret"

# Paystack (https://paystack.com)
# NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxx"
# PAYSTACK_SECRET_KEY="sk_test_xxxxxxxxxxxxx"
# PAYSTACK_WEBHOOK_SECRET="your-webhook-secret"

# ===========================================
# ‚è∞ CRON JOBS - Scheduled Tasks
# ===========================================

# Cron Job Authentication (generate with: openssl rand -base64 32)
# Required for Vercel Cron or external cron services
CRON_SECRET="your-cron-secret-here"

